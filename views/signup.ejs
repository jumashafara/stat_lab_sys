<%- include('partials/header') -%> 
<div class="container mx-auto flex flex-col md:flex-row mt-6 w-3/4 border border-green-600 rounded-md">
    <div class="bg-green-600 md:w-1/2 p-6 md:min-h-ma md:flex md:flex-col">
        <h1 class="font-bold text-white md: text-3xl "><span class="font-thin">Welcome,</span> 
            <span class = "font-medium">Sign Up</span> 
        </h1>
        <div>
            <svg width="10em" height="10em" viewBox="0 0 16 16" class="bi bi-person text-white w-full justify-center align-middle hidden md:block" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
            </svg>
        </div>
    </div>
    <div class="md:w-1/2 p-6">
        <form action=""
            class="flex flex-col space-y-6"
        >
            <label for="username">
                <span
                class="block font-bold text-green-600"
                >username</span>
                <input type="txt"
                    required
                    autofocus
                    class=" border focus:border-green-600 focus:border-2 w-full rounded-md p-2"
                >
            </label>
            <label for="email">
                <span
                class="block font-bold text-green-600"
                >Email</span>
                <input type="email"
                    required
                    class="border w-full rounded-md p-2"
                >
                
            </label>
            <label for="password">
                <span
                class="block font-bold text-green-600"
                >Password</span>
                <input type="password"
                    required
                    class="border w-full rounded-md p-2"
                >
            </label>
            <div class="errors">
            </div>
            <button class="btn btn-success">Sign me up</button>
        </form>
    </div>
</div>
<%- include('partials/footer') -%>