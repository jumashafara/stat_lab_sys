<%- include('partials/header') -%> 
<div class="container mx-auto flex flex-col md:flex-row mt-6 w-3/4 border border-green-600 rounded-md">
    <div class="bg-green-600 md:w-1/2 p-6 md:min-h-max">
        <h1 class="font-bold text-white">Welcome, Sign up</h1>
    </div>
    <div class="md:w-1/2 p-6">
        <form action=""
            class="flex flex-col space-y-6"
        >
            <label for="username">
                <span
                class="block font-bold text-green-600"
                >username</span>
                <input type="txt"
                    required
                    autofocus
                    class=" border focus:border-green-600 focus:border-2 w-full rounded-md p-2"
                >
            </label>
            <label for="email">
                <span
                class="block font-bold text-green-600"
                >Email</span>
                <input type="email"
                    required
                    autofocus
                    class=" border focus:border-green-600 focus:border-2 w-full rounded-md p-2"
                >
            </label>
            <label for="password">
                <span
                class="block font-bold text-green-600"
                >Password</span>
                <input type="password"
                    required
                    class="focus:border-green-600 border w-full rounded-md p-2"
                >
            </label>
            <button class="bg-green-600 text-white rounded-md p-2">Login</button>
        </form>
    </div>
</div>
<%- include('partials/footer') -%>